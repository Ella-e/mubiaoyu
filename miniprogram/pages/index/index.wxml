<!--index.wxml-->
<view hidden="{{dologin}}"  class="whole-login">
  <view wx:if="{{canIUse}}">
    <view class="header">
      <image src="/images/logo.png"></image>
    </view>

    <view class="content">
      <view>申请获取以下权限</view>
      <text>获得你的公开信息（昵称、头像等）</text>
    </view>

    <button class="bottom" type="primary" open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="bindGetUserInfo">
      授权登录
    </button>
  </view>
  <view wx:else>请升级微信版本</view>
</view>


<view  hidden="{{home}}" class="page" bindtouchend='touchend' bindtouchstart='touchstart'>
  <!-- 侧滑栏 -->
  <view class="page_tab">
    <view class="userinfo">
      <image class="userinfo-avatar" src="{{img}}" mode="cover"></image>
      <text class="userinfo-nickname">{{nickName}}</text>
      <text class="userinfo-days">已使用{{userAllDay}}天</text>
    </view>

    <view class="page_tab_content">
      <view bindtap="goIndex" class="wc">
        <image src='../../images/flag.png'></image>
        <text>首页</text>
      </view>
      <view bindtap="goFoot" class="wc">
        <image src='../../images/tags.png'></image>
        <text>足迹</text>
      </view>
      <view bindtap="goHelp" class="wc">
          <image src='../../images/search1.png'></image>
          <text>帮助</text>
      </view>
      <!-- <view bindtap="goSetting" class="wc">
        <image src='../../images/wrench.png'></image>
        <text>设置</text>
      </view> -->
      <view bindtap="goContact" class="wc">
        <image src='../../images/service.png'></image>
        <text>反馈</text>
      </view>
      
    </view>
  </view>
  <!-- 覆盖 -->
  <view class="bg" bindtap='hideview' style='display:{{display}}'>
  </view>
  <!-- 主页 -->
  <view class="home" style="{{translate}}">
    <view class="bg-wrapper">
      <image class="bgImg" src="/images/background.png"></image>
    </view>
    <view class="top">
      <image class='icon_user' bindtap='showview' src="../../images/btn.png"></image>
      <view>
        <view class="hello"><text class="hec">{{nickName}}的水族箱</text></view>
      </view>
      <image class='create' bindtap='goMakeBigGoal' src="../../images/add.png"> </image>
    </view>
    <view>
      <image class='fish10' src="../../images/fish_big.png" ></image>
      <image class='fish1' src="../../images/fish_ordinary.png" ></image>
      <image class='fish2' src="../../images/fish_bigHead.png"></image>
      <image class='fish4' src="../../images/fish_orange.png"></image>
      <image class='fish5' src="../../images/fish_blue.png"></image>
      <image class='fish6' src="../../images/fish_yellow.png"></image>
      <image class='fish13' src="../../images/fish_green.png"></image>
      <image class='fish11' src="../../images/fish_turtle.png"></image>
    </view>
     <button hidden="{{isHide}}" bindtap="dologin" class="login-btn">点击登录</button>
    <view class="myFish" wx:for="{{myFishArr}}">
    <!-- <text>{{item[1]}}</text> -->
      <view class="oneimg">
        <navigator one-type="navigate" url="../breakBigGoal/breakBigGoal?goalId={{item[0]}}" hover-class="none">
          <image class="fishImg" data-id="{{item[0]}}" src="{{item[1]}}"></image>
          <text>{{item[2]}}\n</text>
          <text>当前完成率：{{item[3]}}%\n</text>
          <text>剩余天数：{{item[4]}}</text>
        </navigator>
        <image class="imgFish" catchtap="delBigGoal" data-id="{{item[0]}}" src="/images/cross.png"></image>
      </view>
    </view>

    <!---使用方法说明--->
    <view class="rule-title">创建目标后，点击页面中<text class="bold">'静止的鱼'</text>进入目标分解页面~</view>
